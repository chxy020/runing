<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="@dimen/marker_avatar_width"
            android:layout_height="@dimen/marker_avatar_height" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/math_avatar_pop" />

            <ImageView
                android:id="@+id/marker_avatar"
                android:layout_width="@dimen/marker_avatar_in_size"
                android:layout_height="@dimen/marker_avatar_in_size"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
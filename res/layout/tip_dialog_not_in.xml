<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white" >

        <TextView
            android:id="@+id/alert_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_marginTop="@dimen/margin1"
            android:gravity="center"
            android:text="未进入出发区"
            android:textSize="@dimen/font_size2" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alert_title"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center_vertical"
            android:text="比赛已经开始了，但您尚未进入出发区域。"
            android:textSize="@dimen/font_size7" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center_vertical"
            android:text="请您尽快到达出发区域。"
            android:textSize="@dimen/font_size7" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center_vertical"
            android:text="一旦您到达出区域，您的比赛将自动启动。"
            android:textSize="@dimen/font_size7" />

    </RelativeLayout>

</RelativeLayout>
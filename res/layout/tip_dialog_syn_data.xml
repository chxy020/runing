<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/white" >

        <TextView
            android:id="@+id/alert_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_marginTop="@dimen/margin1"
            android:gravity="center"
            android:text="正在与服务器同步记录"
            android:textSize="@dimen/font_size3" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_below="@id/alert_title"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:text="正在同步录相关文件"
            android:gravity="center"
            android:textSize="@dimen/font_size2" />

  
            <ProgressBar
                android:id="@+id/syn_process"
                style="@style/ProgressBar_sport"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/text1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:visibility="visible" />

        <TextView
            android:id="@+id/tip_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_below="@id/syn_process"
            android:layout_marginTop="@dimen/margin4"
            android:background="@color/blue_dark"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size3" />
    </RelativeLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar" >

    <RelativeLayout
        android:id="@+id/match_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/match_head"
            android:layout_width="@dimen/common_height"
            android:layout_height="@dimen/common_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin1"
            android:background="@drawable/avatar_default_s" />

        <TextView
            android:id="@+id/match_username"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_height"
            android:layout_marginTop="@dimen/margin1"
            android:layout_toRightOf="@id/match_head"
            android:gravity="center"
            android:text="关羽"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_team_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_height"
            android:layout_below="@id/match_username"
            android:layout_toRightOf="@id/match_head"
            android:gravity="center"
            android:text="所属跑队名称"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size7" />

        <ImageView
            android:id="@+id/match_gps_status"
            android:layout_width="@dimen/small_height"
            android:layout_height="@dimen/small_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin1"
            android:src="@drawable/gps_4" />

        <TextView
            android:id="@+id/match_gps"
            android:layout_width="@dimen/common_height"
            android:layout_height="@dimen/small_height"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_toLeftOf="@id/match_gps_status"
            android:text="GPS"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size2"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/match_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/match_bottom"
        android:layout_below="@id/match_top"
        android:background="@color/black" >

        <RelativeLayout
            android:id="@+id/match_main_mileage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line_under_recoding_mileage"
            >

            <RelativeLayout
                android:id="@+id/match_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_num_height"
                android:layout_above="@+id/match_recoding_mileage_text"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                
                 >

                <ImageView
                    android:id="@+id/match_recoding_dis1"
                    android:layout_width="@dimen/main_num_width"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/match_recoding_dis2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/match_recoding_dis2"
                    android:layout_width="@dimen/main_num_width"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/match_recoding_dis_d" />

                <ImageView
                    android:id="@+id/match_recoding_dis_d"
                    android:layout_width="@dimen/match_dot_width"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/match_recoding_dis3"
                    android:layout_width="@dimen/main_num_width"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/match_recoding_dis_d" />

                <ImageView
                    android:id="@+id/match_recoding_dis4"
                    android:layout_width="@dimen/main_num_width"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/match_recoding_dis3" 
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/match_recoding_mileage_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_height"
                android:gravity="center"
                android:text="距离（公里）"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size2" 
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <!--偏离赛道  -->
         <RelativeLayout
            android:id="@+id/match_main_off_track"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line_under_recoding_mileage"
            android:visibility="gone"
            >
            <TextView 
                android:id="@+id/match_main_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您偏离了赛道！"
                android:textColor="#CC0000"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_marginRight="@dimen/margin1"
                android:layout_above="@+id/match_main_t2"
                android:textSize="@dimen/font_size_not_in_track1"
                />
            <TextView 
                android:id="@+id/match_main_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请尽快返回赛道，否则可能会导致整个跑队赛程的结束。"
                android:textColor="#CC0000"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_marginRight="@dimen/margin1"
                android:layout_marginBottom="@dimen/margin6"
                android:textSize="@dimen/font_size_not_in_track2"
                />
             </RelativeLayout>

        <View
            android:id="@+id/line_under_recoding_mileage"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_above="@+id/line_vertical"
            android:background="@color/white" >
        </View>

        <RelativeLayout
            android:id="@+id/match_recoding_time"
            android:layout_width="@dimen/width_half"
            android:layout_height="@dimen/font_size4"
            android:layout_above="@+id/match_recoding_time_text"
            android:layout_marginBottom="@dimen/margin9"
            android:layout_marginLeft="@dimen/margin6"
            android:layout_marginTop="@dimen/margin9" >

            <ImageView
                android:id="@+id/match_recoding_time_h1"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/match_recoding_time_h2"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_h1" />

            <ImageView
                android:id="@+id/match_recoding_time_d1"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_h2" />

            <ImageView
                android:id="@+id/match_recoding_time_m1"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_d1" />

            <ImageView
                android:id="@+id/match_recoding_time_m2"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_m1" />

            <ImageView
                android:id="@+id/match_recoding_time_d2"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_m2" />

            <ImageView
                android:id="@+id/match_recoding_time_s1"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_d2" />

            <ImageView
                android:id="@+id/match_recoding_time_s2"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_time_s1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/match_recoding_time_text"
            android:layout_width="@dimen/width_half"
            android:layout_height="@dimen/small_height"
            android:layout_above="@+id/line_under_recoding_speed_text"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/white" />

        <View
            android:id="@+id/line_vertical"
            android:layout_width="1px"
            android:layout_height="@dimen/sport_set_height"
            android:layout_above="@id/line_under_recoding_speed_text"
            android:layout_centerHorizontal="true"
            android:background="@color/white" >
        </View>

        <RelativeLayout
            android:id="@+id/match_recoding_speed"
            android:layout_width="@dimen/width_half"
            android:layout_height="@dimen/font_size4"
            android:layout_above="@id/match_recoding_time_text"
            android:layout_marginBottom="@dimen/margin9"
            android:layout_marginTop="@dimen/margin9"
            android:layout_toRightOf="@id/line_vertical" >

            <ImageView
                android:id="@+id/match_recoding_speed1"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin8" />

            <ImageView
                android:id="@+id/match_recoding_speed2"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_speed1" />

            <ImageView
                android:id="@+id/match_recoding_speed_d1"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_speed2" />

            <ImageView
                android:id="@+id/match_recoding_speed3"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_speed_d1" />

            <ImageView
                android:id="@+id/match_recoding_speed4"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_speed3" />

            <ImageView
                android:id="@+id/match_recoding_speed_d2"
                android:layout_width="@dimen/match_tnum_width"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/match_recoding_speed4" />
        </RelativeLayout>

        <TextView
            android:id="@+id/match_recoding_speed_text"
            android:layout_width="@dimen/width_half"
            android:layout_height="@dimen/small_height"
            android:layout_above="@+id/line_under_recoding_speed_text"
            android:layout_toRightOf="@id/line_vertical"
            android:gravity="center"
            android:text="平均配速"
            android:textColor="@color/white" />

        <View
            android:id="@+id/line_under_recoding_speed_text"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_above="@+id/match_next_area"
            android:background="@color/white" >
        </View>

        <!--
             <ProgressBar
            android:id="@+id/recoding_process"
            android:layout_above="@+id/match_next_area"
            style="@style/ProgressBar_sport"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_marginTop="@dimen/margin6"
            android:visibility="visible" />
        -->

        <TextView
            android:id="@+id/match_next_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_above="@+id/line_under_match_next_area"
            android:gravity="center"
            android:text="距离下一交接区还有：0.00公里"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size2" />

        <View
            android:id="@+id/line_under_match_next_area"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/white" >
        </View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/match_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_bottom_height"
        android:layout_alignParentBottom="true"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/match_team"
            android:layout_width="@dimen/sport_set_height"
            android:layout_height="@dimen/sport_set_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin2"
            android:background="@drawable/match_team" />

        <ImageView
            android:id="@+id/match_run_baton"
            android:layout_width="@dimen/main_start_hight"
            android:layout_height="@dimen/main_start_hight"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin2"
            android:background="@drawable/match_baton" />

        <ImageView
            android:id="@+id/match_map"
            android:layout_width="@dimen/sport_set_height"
            android:layout_height="@dimen/sport_set_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin2"
            android:background="@drawable/button_map" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_marginTop="10dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		
		<LinearLayout 
	    android:layout_marginLeft="@dimen/margin1"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    >

		<ImageView
		    android:id="@+id/main_count_num1"
		    android:layout_width="@dimen/slider_num_width"
		    android:layout_height="@dimen/slider_num_height"
		    android:background="@drawable/r_0" 
		    android:visibility="gone"
		    />

         <ImageView
            android:id="@+id/main_count_num2"
            android:layout_width="@dimen/slider_num_width"
            android:layout_height="@dimen/slider_num_height"
            android:background="@drawable/r_0"
            android:visibility="gone"
             />
         <ImageView
            android:id="@+id/main_count_num3"
            android:layout_width="@dimen/slider_num_width"
            android:layout_height="@dimen/slider_num_height"
            android:background="@drawable/r_0"
             />
	</LinearLayout>

	</LinearLayout>
	
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textColor="@color/black"
		android:textSize="18sp" 
		android:text="运动总次数" />
	
</LinearLayout>
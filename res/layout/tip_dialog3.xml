<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white" >

        <TextView
            android:id="@+id/alert_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_marginTop="@dimen/margin1"
            android:gravity="center"
            android:text="帐号在其它设备登录"
            android:textSize="@dimen/font_size2" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alert_title"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center_vertical"
            android:text="您的要跑帐号已在其它设备上登录，因此您在此设备上已经退出登录。"
            android:textSize="@dimen/font_size7" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center_vertical"
            android:text="如果这不是您的操作，那么您的帐号可能存在风险，建议您更改密码。"
            android:textSize="@dimen/font_size7" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center_vertical"
            android:text="在此设备上重新登录即可正常使用。"
            android:textSize="@dimen/font_size7" />

        <TextView
            android:id="@+id/tip3_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_below="@id/text3"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/blue_dark"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size3" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- 速度图片 -->
        <!--
             <ImageView
			android:id="@+id/imageView1"
			android:layout_width="wrap_content"
			android:layout_height="80dp"
			android:src="@drawable/r_0" />
        -->

        <LinearLayout
            	android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/main_milage_num1"
                android:layout_width="@dimen/slider_num_width"
                android:layout_height="@dimen/slider_num_height"
                android:background="@drawable/r_0"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/main_milage_num2"
                android:layout_width="@dimen/slider_num_width"
                android:layout_height="@dimen/slider_num_height"
                android:background="@drawable/r_0"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/main_milage_num3"
                android:layout_width="@dimen/slider_num_width"
                android:layout_height="@dimen/slider_num_height"
                android:background="@drawable/r_0"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/main_milage_num4"
                android:layout_width="@dimen/slider_num_width"
                android:layout_height="@dimen/slider_num_height"
                android:background="@drawable/r_0" />

            <ImageView
                android:id="@+id/main_milage_dot"
                android:layout_width="@dimen/small_height"
                android:layout_height="@dimen/slider_num_height"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:background="@drawable/r_dot" />

            <ImageView
                android:id="@+id/main_milage_dec1"
                android:layout_width="@dimen/slider_num_width"
                android:layout_height="@dimen/slider_num_height"
                android:background="@drawable/r_0" />

            <ImageView
                android:id="@+id/main_milage_dec2"
                android:layout_width="@dimen/slider_num_width"
                android:layout_height="@dimen/slider_num_height"
                android:background="@drawable/r_0" />

            <ImageView
                android:id="@+id/main_milage_km"
                android:layout_width="@dimen/common_height"
                android:layout_height="@dimen/slider_num_height"
                android:layout_marginLeft="@dimen/margin1"
                android:background="@drawable/r_km" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="运动总距离"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>